<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pngegg"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/pngegg"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlogApp"
        tools:targetApi="31">
        <activity
            android:name=".EditBlogActivity"
            android:exported="false" />
        <activity
            android:name=".ArticalActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".SavedArticalsActivity"
            android:exported="false" />
        <activity
            android:name=".ReadMoreActivity"
            android:exported="false" />
        <activity
            android:name=".AddArticalActivity"
            android:exported="false" />
        <activity
            android:name=".SignInandRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".register.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>